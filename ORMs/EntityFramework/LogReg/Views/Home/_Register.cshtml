@model User

<h3 class="text-center">Register</h3>
<hr>
<form asp-action="Register" asp-controller="Home" method="POST">
    <div class="class form-group">
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="class form-group">
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="class form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="class form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
        <input asp-for="Password" class="form-control">
    </div>
    <div class="class form-group">
        <label asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold"></span>
        <input asp-for="ConfirmPassword" class="form-control">
    </div>
    <input type="submit" value="Register" />
</form>