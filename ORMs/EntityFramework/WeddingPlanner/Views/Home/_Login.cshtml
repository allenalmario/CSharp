@model LoginUser // the Datatype being produced

<h3 class="text-center">LOGIN</h3>
<hr>

<form asp-controller="Home" asp-action="Login" method="POST">
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <span class="text-danger font-weight bold" asp-validation-for="LoginEmail"></span>
        <input class="form-control" asp-for="LoginEmail" value="neo@matrix.com">
    </div>
    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span class="text-danger font-weight bold" asp-validation-for="LoginPassword"></span>
        <input class="form-control" asp-for="LoginPassword" value="12345678">
    </div>
    <input type="submit" value="Login">
</form>