@model Wedding

@{
    ViewData["Title"] = "Add a Wedding";
}

<div class="text-center row justify-content-around">
    <h1>Plan Your Wedding</h1>
    <a href="">Dashboard</a>
    <a href="">Log Out</a>
</div>
<form asp-action="AddWedding" asp-controller="Wedding">
    <div class="form-group">
        <label asp-for="WedderOne"></label>
        <span class="text-danger font-weight bold" asp-validation-for="WedderOne"></span>
        <input class="form-control" asp-for="WedderOne">
    </div>
    <div class="form-group">
        <label asp-for="WedderTwo"></label>
        <span class="text-danger font-weight bold" asp-validation-for="WedderTwo"></span>
        <input class="form-control" asp-for="WedderTwo">
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <span class="text-danger font-weight bold" asp-validation-for="Date"></span>
        <input class="form-control" asp-for="Date">
    </div>
    <div class="form-group">
        <label asp-for="WeddingAddress"></label>
        <span class="text-danger font-weight bold" asp-validation-for="WeddingAddress"></span>
        <input class="form-control" asp-for="WeddingAddress">
    </div>
    <input type="submit" value="Submit">
</form>