@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Fullness: @ViewBag.Fullness</p>
    <p>Happiness: @ViewBag.Happiness</p>
    <p>Meals: @ViewBag.Meals</p>
    <p>Energy: @ViewBag.Energy</p>
        <h3>@ViewBag.Message</h3>
        <form action="Feed" method="POST">
            <button type="submit">Feed</button>
        </form>
        <form action="Play" method="POST">
            <button type="submit">Play</button>
        </form>
        <form action="Work" method="POST">
            <button type="submit">Work</button>
        </form>
        <form action="Sleep" method="POST">
            <button type="submit">Sleep</button>
        </form>
    @{
        if (ViewBag.Happiness > 100 && ViewBag.Fullness > 100 && ViewBag.Energy > 100)
        {
            <p>Congratulations! You won!</p>
            <button><a href="">Reset</a></button>
        }
        if (ViewBag.Fullness == 0 || ViewBag.Happiness == 0)
        {
            <p>Your DojoDachi has passed away...</p>
            <button><a href="">Reset</a></button>
        }
    }
</div>
